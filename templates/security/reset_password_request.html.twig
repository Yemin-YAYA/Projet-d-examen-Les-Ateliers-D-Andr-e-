{% extends 'base.html.twig' %}

{% block title %}Demande de réinitialisation de mot de passe
{% endblock %}

{% block body %}
	<section class='mainreset'>
		<h1 class="reset">Demande de réinitialisation de mot de passe</h1>
		<div class="form-container">
			<div class="row justify-content-center">
				<div class="col-12">
					{{ form_start(requestPassForm) }}

					{{ form_row(requestPassForm.email) }}
				</div>
				<div class='d-flex justify-content-center'>
					<button type="submit">Envoyer</button>
				</div>
				{{ form_end(requestPassForm) }}
			</div>
			{% for message in app.flashes('succes') %}
				<div class="alert alert-success mt-2">
					{{ message }}
				</div>
			{% endfor %}
			
		</div>
	</section>
{% endblock %}
